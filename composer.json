{
    "name": "nhzex/simple-rpc",
    "description": "simple-rpc",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "auooru",
            "email": "auooru@outlook.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "~7.1",
        "ext-zlib": "*",
        "ext-sockets": "*"
    },
    "require-dev": {
        "nhzex/tp-swoole": "dev-master",
        "phpunit/phpunit": "^8.1",
        "swoole/ide-helper": "^4.3"
    },
    "suggest": {
        "ext-swoole": "swoole support",
        "topthink/think-container": "facade support",
        "nhzex/tp-swoole": "server support"
    },
    "autoload": {
        "psr-4": {
            "HZEX\\SimpleRpc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HZEX\\SimpleRpc\\Stub\\": "stub/",
            "HZEX\\SimpleRpc\\Tests\\": "tests/"
        },
        "files": [
            "stub/common.php"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.laravel-china.org"
        }
    }
}
